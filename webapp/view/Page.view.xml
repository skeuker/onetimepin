<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form" xmlns="sap.m"
	controllerName="pnp.onetimepin.controller.Page" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showHeader="false">
		<VBox>
			<core:Fragment xmlns:core="sap.ui.core" fragmentName="pnp.onetimepin.fragment.OneTimePin" type="XML"/>
			<form:Form editable="true" width="450px" class="sapUiTinyMarginBottom sapUiMediumMarginEnd">
				<form:layout>
					<form:ResponsiveGridLayout singleContainerFullSize="false" adjustLabelSpan="false" labelSpanS="4" labelSpanM="4" labelSpanL="4"/>
				</form:layout>
				<form:formContainers>
					<form:FormContainer>
						<form:FormElement>
							<form:label>
								<Label required="false" textAlign="Left"/>
							</form:label>
							<form:fields>
								<Button text="Confirm" width="100px" type="Emphasized" press="onPressOneTimePinConfirmButton"
									enabled="{AppViewModel>/isOTPConfirmButtonEnabled}"/>
							</form:fields>
						</form:FormElement>
					</form:FormContainer>
				</form:formContainers>
			</form:Form>
		</VBox>
	</Page>
</mvc:View>