<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<Dialog id="diaOneTimePin" title="{i18n>titleAddOTPDialog}" class="sapUiContentPadding" busy="{AppViewModel>/isOTPDialogBusy}">
		<content>
			<core:Fragment xmlns:core="sap.ui.core" fragmentName="pnp.onetimepin.fragment.OneTimePin" type="XML"/>
		</content>
		<beginButton>
			<Button text="Cancel" press="onPressOneTimePinCancelButton"/>
		</beginButton>
		<endButton>
			<Button text="Confirm" type="Emphasized" press="onPressOneTimePinConfirmButton" enabled="{AppViewModel>/isOTPConfirmButtonEnabled}"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>